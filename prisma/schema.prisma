generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String
  departments String[]
  mainDepartment String
  isAdmin     Boolean  @default(false)
  isActive    Boolean  @default(true)
  cases       Case[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Case {
  id            String   @id @default(cuid())
  code          String   @unique
  debtorName    String
  totalAmount   Float
  currentPayment Float
  status        String
  daysInColumn  Int      @default(0)
  assignedTo    User     @relation(fields: [userId], references: [id])
  userId        String
  payments      Payment[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Payment {
  id          String   @id @default(cuid())
  amount      Float
  status      String
  case        Case     @relation(fields: [caseId], references: [id])
  caseId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Template {
  id              String   @id @default(cuid())
  name            String
  type            String
  brand           String
  content         String?
  recognizedFields String[]
  docxUrl         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model GeneratedDocument {
  id          String   @id @default(cuid())
  templateId  String
  caseId      String
  pdfUrl      String
  createdAt   DateTime @default(now())
}