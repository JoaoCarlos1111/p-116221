modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "API"

[[workflows.workflow]]
name = "API"
author = 42981405
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "/nix/store/*/bin/python3 api/app.py"
